@using PagedList;
@using PagedList.Mvc;
@model IPagedList<MVCProject.Models.Appointment>

@{
    ViewBag.Title = "Appointmentlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Appointmentlist</h2>


<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayName("Patient Name")
        </th>
        <th>
            @Html.DisplayName("HospitalName")
        </th>
        <th>
            @Html.DisplayName("Doctors Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HospitalAdmin.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>

        </tr>
    }

</table>
@Html.PagedListPager(Model, Page => Url.Action("Appointmentlist", new { Page }))
