@model IEnumerable<MVCProject.Models.PatientMedicalReport>


<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayName("Doctor Name")
        </th>
        <th>
            @Html.DisplayName("Patient Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diagnosis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Treatment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medicine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Revisit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Doctor.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diagnosis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Treatment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Medicine)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Revisit)
        </td>
        <td>
            @Html.ActionLink("Update List", "Update", new { id = item.New_P_Id }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Genereate report for patient", "ReportforPatient", new { id = item.New_P_Id }, new { @class = "btn btn-info" })

        </td>
    </tr>
}

</table>
